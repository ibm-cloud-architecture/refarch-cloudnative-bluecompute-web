                      i.fa.fa-star.star-style
                      - };
                      - if (half_star) {
                      i.fa.fa-star-half-o.star-style
                      - };
                      - for (var i=0; i<o_stars; i++) {
                      i.fa.fa-star-o.star-style
                      - };
